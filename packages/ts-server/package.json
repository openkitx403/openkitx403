{
  "name": "@openkitx403/server",
  "version": "0.1.1",
  "description": "TypeScript server SDK for OpenKitx403 wallet authentication",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "vitest run",
    "lint": "eslint src --ext .ts"
  },
  "keywords": ["solana", "wallet", "auth", "http", "403", "express", "fastify"],
  "author": "OpenKitx403 Contributors",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "@noble/ed25519": "^2.0.0",
    "bs58": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
